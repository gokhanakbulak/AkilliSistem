<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear"
        android:orientation="horizontal"
        android:weightSum="7"
        >


        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/admin_mesaj_id"/>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Görev İsmi"
            android:id="@+id/admin_mesaj_gid"/>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="Süre"
            android:id="@+id/admin_mesaj_baslik"/>

        <TextView
            android:id="@+id/gorev_desc_txt"
            android:layout_width="0dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:text="admin_mesaj_icerik"
            android:textSize="12dp" />
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:layout_height="wrap_content"
            android:text="Zorluk"
            android:id="@+id/admin_mesaJ_gname"/>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="Yetenekler"
            android:id="@+id/admin_mesaj_icerik"/>

        <Button
            android:layout_marginTop="30dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SİL"
            android:textSize="12dp"
            android:id="@+id/admin_msj_cvp"
            />




    </LinearLayout>

</RelativeLayout>