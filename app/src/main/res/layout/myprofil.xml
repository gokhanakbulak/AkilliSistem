                android:textColor="@color/white"

                android:textSize="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/g_email"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:text="mail"
                android:textColor="@color/white"
                android:textSize="12dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
